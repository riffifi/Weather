<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Weather" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/text_primary</item>
        <item name="colorPrimaryVariant">@color/text_secondary</item>
        <item name="colorOnPrimary">@color/amoled_black</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorSecondaryVariant">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/amoled_black</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/amoled_black</item>
        
        <!-- Background color. -->
        <item name="android:windowBackground">@color/amoled_black</item>
        
        <!-- Text appearances. -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Weather.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Weather.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Weather.HeadlineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Weather.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Weather.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Weather.BodySmall</item>
        
        <!-- Material 3 components styling -->
        <item name="materialCardViewStyle">@style/Widget.Weather.CardView</item>
    </style>
    
    <!-- Text appearances -->
    <style name="TextAppearance.Weather.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">32sp</item>
    </style>
    
    <style name="TextAppearance.Weather.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="TextAppearance.Weather.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.Weather.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.Weather.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.Weather.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Widget styles -->
    <style name="Widget.Weather.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="rippleColor">@color/text_secondary</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="strokeColor">#1AFFFFFF</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>